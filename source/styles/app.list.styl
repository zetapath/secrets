ul
  position                        : absolute
  top                             : 0
  left                            : 0
  bottom                          : 0
  width                           : 100%
  overflow-x                      : hidden
  overflow-y                      : scroll
  -webkit-overflow-scrolling      : touch
  > :first-child
    margin-top                    : HEADER_HEIGHT

  > input
    width                         : 100%
    height                        : HEIGHT = (UNIT / 1.5)
    font-size                     : FONT_SIZE_NORMAL
    font-weight                   : FONT_WEIGHT_NORMAL
    line-height                   : HEIGHT
    appearance                      none
    border                        : none
    border-bottom                 : solid 1px darken(WHITE, 2.5%)
