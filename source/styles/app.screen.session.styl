#session
  text-align                            : center
  background-color                      : THEME
  color                                 : WHITE
  > h1
    margin-top                          : -15vh
    font-size                           : (UNIT / 1.25)
    font-family                         : FONT_FAMILY_LOGO
    font-weight                         : normal
    text-shadow                         : H1_SHADOW
  > form
    width                               : WIDTH = 80vw
    > *
      width                             : WIDTH
      text-align                        : center
    > button
      margin                            : (SPACE / 1.5) 0 (SPACE / 3) 0
    > a
      font-size                         : FONT_SIZE_SMALL
  > small
    z-index                             : 1
    position                            : absolute
    left                                : 0
    bottom                              : (SPACE / 2)
    width                               : 100%
    color                               : darken(THEME, 25%)
    opacity                             : 0.75
  > img
    position                            : absolute
    width                               : 120vw
    left                                : -7.5vw
    bottom                              : -45vw
  > *
    transform                             translateY(100vh)
    transition                            all ANIMATION_DURATION ANIMATION_EASE
    for index in (0..10)
      delayChild index, 4
  &.true
    > *
      transform                           translateY(0%)
