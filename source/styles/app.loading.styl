[data-loading]
  display-flex()
  justify-content                     center
  align-content                       center
  align-items                         center
  height                            : 50vh
  width                             : 100%
  > div
    width                           : SIZE = (UNIT / 1.25)
    height                          : SIZE
    border-radius                   : SIZE

    &::before, &::after
      content                       : ""
      position                      : absolute
      width                         : SIZE
      height                        : SIZE
      transform                       scale(0.0)
      border-radius                 : SIZE
      background-color              : darken(WHITE, 25%)
    SPEED = 1.5s
    &::before
      animation dialog-loading SPEED 0 infinite
    &::after
      animation dialog-loading SPEED (SPEED / 2) infinite

  article &
    margin-top                      : HEADER_HEIGHT


@keyframes dialog-loading
  0%
    transform scale(0.0)
  100%
    transform scale(1.0)
    opacity: 0
