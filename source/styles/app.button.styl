button, .button
  display                                 : block
  height                                  : BUTTON_HEIGHT
  width                                   : auto
  font-size                               : FONT_SIZE_BIG
  font-weight                             : FONT_WEIGHT_BOLD
  line-height                             : BUTTON_HEIGHT
  text-align                              : center
  border                                  : none
  overflow                                : hidden
  transition                                all ANIMATION_DURATION ANIMATION_EASE
  > abbr
    transition                              all (ANIMATION_DURATION / 2) ANIMATION_EASE
  &, > abbr
    text-transform                          capitalize
  // -- class ------------------------------------------------------------------
  &.radius
    border-radius                         : UNIT
  &.white
    color                                 : THEME
    &:not([disabled])
      background-color                    : WHITE
    &[disabled]
      background-color                    : darken(THEME, 25%)
    &.loading::after
      background-color                    : THEME
  &.transparent
    background-color                      : transparent
    box-shadow                              0 0 0 2px WHITE
    &.loading::after
      background-color                    : WHITE
  &.theme
    color                                 : WHITE
    &:not([disabled])
      background-color                    : THEME
    &[disabled]
      background-color                    : lighten(BACKGROUND, 75%)
    &.loading::after
      background-color                    : WHITE
  &.secondary
    background-color                      : lighten(BACKGROUND, 50%)
    color                                 : WHITE
  &.loading
    position                              : relative
    width                                 : BUTTON_HEIGHT !important
    // max-width                             : BUTTON_HEIGHT
    > abbr
      opacity                             : 0
    &::after
      content                             : ""
      position                            : absolute
      display                             : block
      left                                : 0
      top                                 : 0
      width                               : BUTTON_HEIGHT
      height                              : BUTTON_HEIGHT
      transform                             scale(0.0)
      border-radius                       : BUTTON_HEIGHT
      animation                             LOADING (1.5 * ANIMATION_DURATION) ANIMATION_DURATION ANIMATION_EASE  infinite
