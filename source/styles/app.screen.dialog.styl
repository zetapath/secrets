[data-dialog]
  display-flex()
  justify-content                     center
  align-content                       center
  align-items                         center
  width                               : 100%
  text-align                          : center
  color                               : WHITE
  background-color                    : alpha(BACKGROUND, 97.5%)
  transform                             translateY(100%)
  &.true
    transform                           translateY(0%)
    > * > *
      opacity                         : 1
      transform                         translateY(0%)
  > *
    width                             : 85vw
    > *
      opacity                         : 0
      transform                        translateY(100vh)
      transition                       all ANIMATION_DURATION ANIMATION_EASE
      for index in (0..10)
        delayChild index, 2

    > h1
      margin-bottom                   : (SPACE / 2)
      color                           : THEME
    > img
      margin                          : (2 * SPACE) 0
      max-width                       : 50vw
    > small
      display                         : block
      padding                         : 0 (2.5 * SPACE)
      color                           : alpha(WHITE, 50%)
      > strong
        color                         : alpha(WHITE, 75%)
    > button
      margin-bottom                   : (SPACE / 2)
      width                           : 100%
      &.loading
        margin-left                   : (50vw - (BUTTON_HEIGHT))

    > a
      position                        : absolute
      width                           : HEIGHT = 10vw
      height                          : HEIGHT
      bottom                          : SPACE
      left                            : 50vw - (HEIGHT / 2)
      line-height                     : (HEIGHT / 1.1)
      background-color                : alpha(WHITE, 5%)
      border-radius                   : HEIGHT
