#howto
  background-color                    : THEME
  &, > *, > * > *
    transition                          all ANIMATION_DURATION ANIMATION_EASE
  > *
    position                          : relative
    overflow                          : hidden

  DELAY = (ANIMATION_DURATION / 2.5)
  > * > *
    position                          : absolute
  > .scene
    flex-grow                           1
    text-shadow                       : (SPACE / 4) (SPACE / 6) rgba(0,0,0,0.1)
    text-align                        : center
    color                             : WHITE
    > *
      transition-delay                  (2 * DELAY)
    > h1
      z-index                         : 1
      top                             : SPACE
      left                            : 0
      width                           : 100vw
      transform                         translateY(-100vh)
    > img
      bottom                          : -5vw
      &.fox
        left                          : GAP = -2.5vw
        bottom                        : -10%
        width                         : (100vw -  (2 * GAP))
      &.rabbit
        z-index                       : 3
        width                         : 30.5vw
        left                          : 25vw
        transition-delay                (4.5 * DELAY)
      &.dog
        z-index                       : 1
        width                         : 52.5vw
        left                          : -7.5vw
        transition-delay                (3 * DELAY)
      &.bear
        z-index                       : 0
        width                         : SIZE = 75vw
        left                          : ((100vw - SIZE) / 2)
      &.pig
        z-index                       : 1
        width                         : 57.5vw
        right                         : -12.5vw
        transition-delay                (3.5 * DELAY)
      &.raccoon
        z-index                       : 2
        width                         : 52.5vw
        right                         : 7.5vw
        transition-delay                (4 * DELAY)

    > img, > [data-upload-image], > input
      z-index                         : 0
      transform                         translateY(100vh)
    > [data-upload-image]
      margin                          : 0
      top                             : 20vh
      left                            : (50vw - (UPLOAD_IMAGE_USER / 2))
      box-shadow                        0 0 0 (SPACE / 2) alpha(WHITE, 50%)
    > input
      left                            : GAP = 27.5vw
      bottom                          : (GAP / 1.5)
      width                           : (100vw - (GAP * 2))
      height                          : HEIGHT = (2 * SPACE)
      font-size                       : FONT_SIZE_BIG
      font-weight                     : FONT_WEIGHT_BOLD
      line-height                     : HEIGHT
      text-align                      : center

  > .text
    flex-grow 0
    background-color                  : WHITE
    text-align                        : center
    GAP = 5vw
    > *
      transition-delay                  DELAY
    > p
      left                            : GAP
      right                           : GAP
      top                             : GAP
      font-size                       : FONT_SIZE_NORMAL
      transform                         translateY(-100vh)
    > a
      bottom                          : SPACE
      left                            : GAP
      right                           : GAP
      transform                         translateY(100vh)
    > .button
      &.loading
        width                         : auto !important
        left                          : GAP = (50vw - (BUTTON_HEIGHT * 2.1))
        right                         : GAP

  // -- STEPS
  &[data-step="0"]
    > .scene
      height                          : 0
    > .text
      height                          : 100vh
      > a
        bottom                        : 45vh

  &:not([data-step="0"])
    SCENE_HEIGHT = 65vh
    > .scene
      height                          : SCENE_HEIGHT
    > .text
      height                          : (100vh - SCENE_HEIGHT)

  &[data-step="0"] [data-step="0"],
  &[data-step="1"] [data-step="1"],
  &[data-step="2"] [data-step="2"],
  &[data-step="3"] [data-step="3"]
    transform                           translateY(0%)

  &[data-step="4"]
    > .scene
      height                          : 0
    > .text
      height                          : 100vh
